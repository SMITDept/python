<?xml version="1.0" encoding="utf-8"?>

<openerp>
  <data>        
    
   <!-- Vistas TREE -->
    <record model="ir.ui.view" id="view_adjuntos_tree">
      <field name="name">adjuntos.tree</field>
      <field name="model">adjuntos</field>
      <field name="arch" type="xml">
        <tree string="Lista de Archivos Adjuntos">
          <field name="datas_fname" string="Archivo"/>
          <field name="create_uid" string="Autor"/>
          <field name="create_date" string="Fecha y Hora de CreaciÃ³n"/>
        </tree>
      </field>
    </record>
    
    <!-- Vistas FORM -->
    <record model="ir.ui.view" id="view_adjuntos_form">
      <field name="name">adjuntos.form</field>
      <field name="model">adjuntos</field>
      <field name="arch" type="xml">
        <form string="Attachments" version="7.0">
          <sheet>
            <group col="2" colspan="2">
              <label for="datas" />
              <newline/>
              <field name="datas" filename="datas_fname" nolabel="1"/>
              <newline/>
              <field name="datas_fname" invisible="1"/>
              <field name="store_fname" invisible="1"/>
            </group>
            <group col="2" colspan="2">
              <group col="2" colspan="1">
                <field name="modelo_padre" invisible="1"/>
                <field name="tipo_documento_m2o_id" invisible="0"/>
              </group>
              <group col="2" colspan="1">
                <field name="annio" invisible="1"/>
                <field name="mes" invisible="1"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    
    <!-- Vistas SEARCH -->
    <record model="ir.ui.view" id="view_adjuntos_search">
      <field name="name">adjuntos.search</field>
      <field name="model">adjuntos</field>
      <field name="arch" type="xml">
        <search>
          <field name="datas_fname" string="Nombre del archivo"/>
        </search>
      </field>
    </record>
    
    <!-- ACTIONS -->
    <record model="ir.actions.act_window" id="action_adjuntos">
      <field name="name">Archivos Adjuntos</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="view_adjuntos_tree"/>
      <field name="res_model">adjuntos</field>
      <field name="search_view_id" ref="view_adjuntos_search"/>
      <field name="view_mode">tree,form</field>
    </record>
    
    <!-- MENU ITEMS -->  
    <menuitem action="action_adjuntos"
              id="listado_adjuntos"
              name="Lista de Archivos Adjuntos"
              parent="hardware_inventory.top_adjuntos"
              sequence="50"/>
    <!--parent="base.next_id_4"-->
  </data>
</openerp>