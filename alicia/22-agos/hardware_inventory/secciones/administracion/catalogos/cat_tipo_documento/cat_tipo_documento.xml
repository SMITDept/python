<?xml version="1.0" encoding="utf-8"?>

<!-- Module XML -->

<openerp>
	<data>
		
		<!-- Tree View Records -->	
	
		<record model="ir.ui.view" id="view_cat_tipo_documento_tree">		 
			<field name="name">cat_tipo_documento.tree</field>
			<field name="model">cat_tipo_documento</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Tipo de documento">
					<field name="descripcion"/>
					<field name="activo"/>
				</tree>
			</field>
		</record>
	
		<!-- Form View Records -->	
	
		<record model="ir.ui.view" id="view_cat_tipo_documento_form">
			<field name="name">cat_tipo_documento.form</field>
			<field name="model">cat_tipo_documento</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Tipo de documento">
					<group col="2" colspan="2">
						<field name="clave"/>
						<field name="descripcion"/>
						<field name="openerp_model_m2m"/>
						<field name="activo"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Search View Records -->
	
		<record  model="ir.ui.view" id="view_cat_tipo_documento_search">
			<field name="name">cat_tipo_documento.search</field>
			<field name="model">cat_tipo_documento</field>
			<field name="type">search</field>
			<field name="arch" type="xml">					
				<search string="Tipo de documento">
					<field name="descripcion"/>
					<field name="activo"/>
				</search>
			</field>
		</record>
	
		<!-- Action Records -->	
	
		<record model="ir.actions.act_window" id="action_cat_tipo_documento">
			<field name="name">Tipo de documento</field>
			<field name="view_id" ref="view_cat_tipo_documento_tree"/>
			<field name="res_model">cat_tipo_documento</field>
		</record>
		
		<!-- Menu Items -->
		
		<menuitem name="Lista de tipos de documentos"
					parent="hardware_inventory.top_catalogos"
					id="lista_cat_tipo_documento"
					action="action_cat_tipo_documento"/>
		
	</data>
</openerp>
