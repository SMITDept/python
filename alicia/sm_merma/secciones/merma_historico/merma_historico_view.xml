<?xml version="1.0" encoding="utf-8"?>

<!-- Module XML -->
<openerp>
  <data>
    
    <!-- La vista tree o Ã¡rbol es una vista en formato lista -->
    <!--contiene la definicion de la vista-->
		<record model="ir.ui.view" id="view_merma_historico_tree">		 
			<field name="name">merma_historico.tree</field>
			<field name="model">merma_historico</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Historico Merma">
          <field name="fecha_captura"/>
          <field name="realizado_por"/>
          <field name="cod_ean"/>
          <field name="cod_esc"/>
          <field name="producto"/>
          <field name="cantidad_capturada"/>
          <field name="unidad_med"/>
          <field name="precio"/>
          <field name="clase_1"/>
          <field name="cant_mermada"/>
          <field name="fecha_merma"/>
          <field name="clase_2"/>
          <field name="finalizado_por"/>
				</tree>
			</field>
		</record>
		
		<!-- Form View Records -->
    <record model="ir.ui.view" id="view_merma_historico_form">
      <field name="name">merma_historico.form</field>
      <field name="model">merma_historico</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Historico Merma" version="7.0" >
          <sheet>
          <group string="Merma" colspan='2' col='2'>
          <field name="fecha_captura"/>
          <field name="realizado_por"/>
          <field name="cod_ean"/>
          <field name="cod_esc"/>
          <field name="producto"/>
          <field name="cantidad_capturada"/>
          <field name="unidad_med"/>
          <field name="precio"/>
          <field name="clase_1"/>
          <field name="cant_mermada"/>
          <field name="fecha_merma"/>
          <field name="clase_2"/>
          <field name="finalizado_por"/>
        
          <field name="tienda"/>
          <field name="referencia"/>
          <field name="localizacion"/>
          <field name="destino"/>
          </group>
          </sheet>
        </form>
      </field>
    </record>
    
    <!-- Search View Records -->
		<record  model="ir.ui.view" id="view_merma_historico_search">
			<field name="name">merma_historico.search</field>
			<field name="model">merma_historico</field>
			<field name="type">search</field>
			<field name="arch" type="xml">					
				<search string="Historico de Merma">
          <field name="fecha_merma"/>
          <field name="tienda"/>
          <field name="cod_ean"/>
          <field name="producto"/>
          <field name="clase_1"/>
          <field name="clase_2"/>
          <field name="realizado_por"/>
          <field name="finalizado_por"/>
          <field name="referencia"/>
				</search>
			</field>
    </record>
  <!-- Action Records -->	
		<record model="ir.actions.act_window" id="action_merma_historico">
			<field name="name">Historico</field>
			<field name="view_id" ref="view_merma_historico_tree"/>
			<field name="view_mode">tree,form</field>
			<field name="res_model">merma_historico</field> 
		</record>
		<!-- Menu Items -->	
		<menuitem name="Historico de Merma"
							parent="sm_merma.seccion_historial"  
							id="merma_historico_muestra"
							action="action_merma_historico"
              sequence="150"/>
    
  </data>
</openerp>