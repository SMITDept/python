<?xml version="1.0" encoding="utf-8"?>

<!-- Module XML -->

<openerp>
	<data>
		
		<!-- Tree View Records -->	
	
		<record model="ir.ui.view" id="view_merma_tree">		 
			<field name="name">merma.tree</field>
			<field name="model">merma</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Merma">
					<field name="fecha_mov"/>
					<field name="almacen_m2o_id" />
					<field name="loc_final_dic"/>
					<field name="empleado_autor"/>
				</tree>
			</field>
		</record>
	
		<!-- Form View Records -->	
	
		<record model="ir.ui.view" id="view_merma_form">
			<field name="name">merma.form</field>
			<field name="model">merma</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Merma" version="7.0">
					<header>
						<!--<button name="action_confirm" states="draft" string="Confirm Inventory" type="object" class="oe_highlight" />-->
						<button name="accion_confirmar" string="Confirm Inventory" type="object" class="oe_highlight" />
						<!--<button name="action_done" states="confirm" string="Validate Inventory" type="object" class="oe_highlight" />-->
						<button name="action_done" string="Validate Inventory" type="object" class="oe_highlight" />
						<!--<button name="action_cancel_draft" states="cancel" string="Set to Draft" type="object"/>-->
						<button name="action_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
						<!--<button name="action_cancel_inventory" states="draft,confirm,done" string="Cancel Inventory" type="object"/>-->
						<button name="action_cancel_inventory"  string="Cancel Inventory" type="object"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
          </header>
					<group col="4" colspan="2">
						<!--<field name="clave"/>-->
						<!--<field name="ubicaciones_subquery"/>-->
            <field name="fecha_mov"/>
						<field name="empleado_autor"/>
						<!--<field name="tiendas_dic"/>-->
						<field name="almacen_m2o_id" />
						<label string=" " colspan="2"/>
            <!--<field name="location_id" />   on_change="onchange_filtro_almacen( almacen_m2o_id, ubicaciones_subquery )" -->
						<field name="loc_final_dic"/>
					</group>
					<group string="Buscar Productos" col="4" colspan="4">
					<button name="obtenerProductos"
											string="Obtener Productos"
											type="object"
											class="oe_highlight"/>
					</group>
					<group string="Seleccionar Productos" col="4" colspan="4">
					<!--<field name="selec_merma_o2m_ids" nolabel="1"/>-->
					<field name="selecc_merma_m2m" nolabel="1"/>
					</group>	
         
				</form>
			</field>
		</record>
		
		<!-- Search View Records -->
	
		<record  model="ir.ui.view" id="view_merma_search">
			<field name="name">merma.search</field>
			<field name="model">merma</field>
			<field name="type">search</field>
			<field name="arch" type="xml">					
				<search string="Merma">
          <field name="tiendas_dic"/>
        <!--<field name="clave"/>-->
				</search>
			</field>
		</record>
	
		<!-- Action Records -->	
	
		<record model="ir.actions.act_window" id="action_merma">
			<field name="name">Merma</field>
			<field name="view_id" ref="view_merma_tree"/>
			<field name="res_model">merma</field>
		</record>
		
		<!-- Menu Items -->
		
		<menuitem name="Control de Merma"
					parent="sm_merma.seccion_control"
					id="lista_merma"
					action="action_merma"/>
		
	</data>
</openerp>
