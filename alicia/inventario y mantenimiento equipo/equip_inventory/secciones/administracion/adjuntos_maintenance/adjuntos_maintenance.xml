<?xml version="1.0" encoding="utf-8"?>

<!-- Module XML -->

<openerp>
	<data>
		
		<!-- Tree View Records -->	
	
		<record model="ir.ui.view" id="view_adjuntos_maintenance_tree">		 
			<field name="name">adjuntos_maintenance.tree</field>
			<field name="model">adjuntos_maintenance</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Facturas">
					<field name="datas_fname" string="Archivo"/>

				</tree>
			</field>
		</record>
	
		<!-- Form View Records -->	
	
		<record model="ir.ui.view" id="view_adjuntos_maintenance_form">
			<field name="name">adjuntos_maintenance.form</field>
			<field name="model">adjuntos_maintenance</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Facturas">
					<group>
						<label for="datas" />
						<newline/>
						<field name="datas" filename="datas_fname" nolabel="1"/>
						<field name="datas_fname" invisible="1"/>
						<field name="tipo_documento_m2o_id" invisible="1"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Search View Records -->
	
		<record  model="ir.ui.view" id="view_adjuntos_maintenance_search">
			<field name="name">adjuntos_maintenance.search</field>
			<field name="model">adjuntos_maintenance</field>
			<field name="type">search</field>
			<field name="arch" type="xml">					
				<search string="Facturas">
				</search>
			</field>
		</record>
	
		<!-- Action Records -->	
	
		<record model="ir.actions.act_window" id="action_adjuntos_maintenance">
			<field name="name">Facturas</field>
			<field name="view_id" ref="view_adjuntos_maintenance_tree"/>
			<field name="res_model">adjuntos_maintenance</field>
		</record>
		
		<!-- Menu Items -->	
		
	</data>
</openerp>
